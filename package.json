{
  "name": "base-react-typescript-project",
  "description": "A base react typescript project",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "author": {
    "name": "Lucian Caetano"
  },
  "license": "CC0-1.0",
  "repository": {
    "type": "git",
    "url": "https://github.com/luciancaetano/base-react-typescript-project.git"
  },
  "scripts": {
    "start": "vite --host",
    "build": "tsc && vite build",
    "preview": "vite preview",
    "test": "is-ci \"test:coverage\" \"test:jest\"",
    "test:staged": "cross-env CI=1 react-scripts test --findRelatedTests",
    "test:jest": "jest",
    "test:coverage": "cross-env CI=1 yarn test:jest -- --coverage",
    "postinstall": "husky install",
    "pretest:e2e:run": "yarn build",
    "test:e2e:dev": "start-server-and-test start:cli http://localhost:3000 cy:open",
    "test:e2e": "is-ci \"test:e2e:run\" \"test:e2e:dev\"",
    "test:e2e:run": "start-server-and-test serve http://localhost:3000 cy:run",
    "lint": "eslint --fix .",
    "serve": "serve --no-clipboard --single --listen 3000 dist",
    "generate": "plop",
    "validate-types": "tsc --project tsconfig.json --pretty --noEmit",
    "validate": "yarn validate-types && yarn lint && yarn test"
  },
  "dependencies": {
    "@fontsource/roboto": "^5.2.6",
    "@headlessui/react": "^2.2.7",
    "@heroicons/react": "^2.2.0",
    "@hookform/resolvers": "^5.2.1",
    "@phosphor-icons/react": "^2.1.10",
    "@stylistic/eslint-plugin": "^5.2.3",
    "@tailwindcss/typography": "^0.5.16",
    "@tanstack/react-query": "^5.85.5",
    "@tanstack/react-query-devtools": "^5.85.5",
    "@testing-library/jest-dom": "^6.8.0",
    "@testing-library/react": "^16.3.0",
    "@testing-library/user-event": "^14.6.1",
    "@types/jest": "^30.0.0",
    "@types/node": "^24.3.0",
    "@types/react": "^19.1.11",
    "@types/react-dom": "^19.1.7",
    "@vitejs/plugin-react": "^5.0.1",
    "clsx": "^2.1.1",
    "dayjs": "^1.11.13",
    "history": "^5.3.0",
    "i18next": "^25.4.0",
    "i18next-browser-languagedetector": "^8.2.0",
    "intersection-observer": "^0.12.2",
    "jsonwebtoken": "^9.0.2",
    "lodash": "^4.17.21",
    "marked": "^16.2.0",
    "quill": "^2.0.3",
    "react": "^19.1.1",
    "react-dom": "^19.1.1",
    "react-error-boundary": "^6.0.0",
    "react-hook-form": "^7.62.0",
    "react-i18next": "^15.7.1",
    "react-icons": "^5.5.0",
    "react-router-dom": "^7.8.1",
    "tailwind-merge": "^3.3.1",
    "type-fest": "^4.41.0",
    "typescript": "^5.9.2",
    "uuid": "^11.1.0",
    "vite": "^7.1.3",
    "vite-tsconfig-paths": "^5.1.4",
    "web-vitals": "^5.1.0",
    "yup": "^1.7.0",
    "zustand": "^5.0.8"
  },
  "devDependencies": {
    "@eslint/compat": "^1.3.2",
    "@eslint/eslintrc": "^3.3.1",
    "@eslint/js": "^9.33.0",
    "@mswjs/data": "^0.16.2",
    "@stylistic/eslint-plugin-ts": "^4.4.1",
    "@tailwindcss/postcss": "^4.1.12",
    "@tailwindcss/vite": "^4.1.12",
    "@types/dompurify": "^3.2.0",
    "@types/jsonwebtoken": "^9.0.10",
    "@types/lodash": "^4.17.20",
    "@types/marked": "^6.0.0",
    "@typescript-eslint/eslint-plugin": "^8.40.0",
    "@typescript-eslint/parser": "^8.40.0",
    "autoprefixer": "^10",
    "browserslist-to-esbuild": "^2.1.1",
    "cross-env": "^10.0.0",
    "daisyui": "^5.0.50",
    "eslint": "^9.33.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-import-resolver-typescript": "^4.4.4",
    "eslint-plugin-import": "^2.32.0",
    "eslint-plugin-jest-dom": "^5.5.0",
    "eslint-plugin-jsx-a11y": "^6.10.2",
    "eslint-plugin-no-relative-import-paths": "^1.6.1",
    "eslint-plugin-prettier": "^5.5.4",
    "eslint-plugin-react": "^7.37.5",
    "eslint-plugin-react-hooks": "^5.2.0",
    "eslint-plugin-testing-library": "^7.6.6",
    "globals": "^16.3.0",
    "husky": "^9.1.7",
    "identity-obj-proxy": "^3.0.0",
    "is-ci": "^4.1.0",
    "is-ci-cli": "^2.2.0",
    "jest": "^30.0.5",
    "jest-environment-jsdom": "^30.0.5",
    "lint-staged": "^16.1.5",
    "msw": "^2.10.5",
    "npm-run-all": "^4.1.5",
    "plop": "^4.0.1",
    "postcss": "^8",
    "prettier": "^3.6.2",
    "react-test-renderer": "^19.1.1",
    "sass": "^1.90.0",
    "serve": "^14.2.4",
    "start-server-and-test": "^2.0.13",
    "tailwindcss": "^4.1.12",
    "ts-jest": "^29.4.1",
    "ts-node": "^10.9.2",
    "tsconfig-paths-webpack-plugin": "^4.2.0",
    "vite-vitals": "^1.0.2"
  },
  "eslintConfig": {
    "overrides": [
      {
        "files": [
          "**/*.stories.*"
        ],
        "rules": {
          "import/no-anonymous-default-export": "off"
        }
      }
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.+(ts|tsx|js)": [
      "yarn lint",
      "npm run test:staged",
      "git add"
    ]
  }
}
